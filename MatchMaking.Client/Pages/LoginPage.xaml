<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatchMaking.Client.LoginPage"
             Shell.NavBarIsVisible="false">

    <ScrollView>
        <Grid ColumnDefinitions="1*,3*">
            <VerticalStackLayout Grid.Column="0"
                                 Padding="30,0"
                                 Spacing="25">
                <Image Source="logo_og.png"
                       HeightRequest="185"
                       Aspect="AspectFit"
                       SemanticProperties.Description="dot net bot in a hovercraft number nine" />

                <Button x:Name="LoginBtn" Margin="0,30,0,0"
                        Text="Sign-in"
                        FontAttributes="Bold"
                        SemanticProperties.Hint="Login ya dingus"
                        Clicked="OnLoginClicked"
                        HorizontalOptions="Fill" />

                <Border Stroke="#babada"
                        StrokeThickness="5">
                    <Editor x:Name="editor"
                            HeightRequest="350"
                            BackgroundColor="#f4f4ff" />
                </Border>
                
            </VerticalStackLayout>
            <Image Source="splash.png"
                   Aspect="Fill"
                   Grid.Column="1"
                   MaximumHeightRequest="740">
                
            </Image>
        </Grid>


    </ScrollView>

</ContentPage>
